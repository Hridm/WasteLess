<!-- File: Views/MapView.xaml -->
<UserControl x:Class="WasteManagementApp.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utilities="clr-namespace:WasteManagementApp.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <!-- Value Converters -->
        <utilities:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <utilities:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Style for filter panels -->
        <Style x:Key="FilterPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Style for section headers -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Style for buttons -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0b7dda"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: Filters and Location List -->
        <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0" Background="#FAFAFA">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">

                    <!-- Header -->
                    <TextBlock Text="Disposal Location Finder" 
                               Style="{StaticResource SectionHeaderStyle}"
                               FontSize="18"
                               Margin="0,0,0,20"/>

                    <!-- Search Box -->
                    <Border Style="{StaticResource FilterPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="Search" Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBox x:Name="SearchTextBox"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                     Padding="8"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,0,8"/>
                            <Button Content="Search" 
                                    Command="{Binding SearchCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <!-- Filter by Suburb -->
                    <Border Style="{StaticResource FilterPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="Filter by Suburb" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding Suburbs}"
                                      SelectedItem="{Binding SelectedSuburb}"
                                      Height="32"
                                      VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Filter by Waste Type -->
                    <Border Style="{StaticResource FilterPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="Filter by Waste Type" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding WasteTypes}"
                                      SelectedItem="{Binding SelectedWasteType}"
                                      Height="32"
                                      VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Filter by Location Type -->
                    <Border Style="{StaticResource FilterPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="Location Type" Style="{StaticResource SectionHeaderStyle}"/>
                            <CheckBox Content="Battery Drop-offs" 
                                      IsChecked="{Binding ShowBatteryLocations}"
                                      Margin="0,0,0,8"/>
                            <CheckBox Content="Furniture Centers" 
                                      IsChecked="{Binding ShowFurnitureLocations}"
                                      Margin="0,0,0,8"/>
                            <CheckBox Content="Pickup Service Only" 
                                      IsChecked="{Binding ShowPickupOnly}"/>
                        </StackPanel>
                    </Border>

                    <!-- Clear Filters Button -->
                    <Button Content="Clear All Filters" 
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,0,15"/>

                    <!-- Status Message -->
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontStyle="Italic"
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>

                    <!-- Location List -->
                    <Border Style="{StaticResource FilterPanelStyle}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionHeaderStyle}">
                                <Run Text="Locations ("/>
                                <Run Text="{Binding FilteredLocationsCount}"/>
                                <Run Text=")"/>
                            </TextBlock>

                            <ListBox ItemsSource="{Binding FilteredLocations}"
                                     SelectedItem="{Binding SelectedLocation}"
                                     Height="300"
                                     BorderThickness="1"
                                     BorderBrush="#CCCCCC">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="13"/>
                                            <TextBlock Text="{Binding Suburb}" 
                                                       Foreground="#666666"
                                                       FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- RIGHT PANEL: Map and Location Details -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Map Placeholder -->
            <Border Grid.Row="0" Background="#E8F5E9" Margin="15">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="🗺️" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Interactive Map View" 
                               FontSize="24" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Map markers will display disposal locations" 
                               FontSize="14"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock FontSize="12" Foreground="#999999" HorizontalAlignment="Center" TextAlignment="Center">
                        <Run Text="Filtered locations: "/>
                        <Run Text="{Binding FilteredLocationsCount}" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="(Map integration: Google Maps API, Bing Maps, or OpenStreetMap)"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Location Details Panel -->
            <Border Grid.Row="1" 
                    Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="0,1,0,0"
                    Padding="20"
                    MinHeight="150">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Location Details" 
                                   Style="{StaticResource SectionHeaderStyle}"
                                   FontSize="18"
                                   Margin="0,0,0,15"/>

                        <!-- Show when location is selected -->
                        <StackPanel Visibility="{Binding IsLocationSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="Bold" Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedLocation.Name}" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Address:" FontWeight="Bold" Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedLocation.Address}" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Suburb:" FontWeight="Bold" Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
                                    <Run Text="{Binding SelectedLocation.Suburb}"/>
                                    <Run Text="{Binding SelectedLocation.Postcode}"/>
                                </TextBlock>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Phone:" FontWeight="Bold" Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedLocation.PhoneNumber}" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Hours:" FontWeight="Bold" Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedLocation.OpeningHours}" TextWrapping="Wrap" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Description:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding LocationDetailsText}" TextWrapping="Wrap"/>
                            </Grid>
                        </StackPanel>

                        <!-- Show when no location selected -->
                        <TextBlock Text="{Binding LocationDetailsText}"
                                   Foreground="#999999"
                                   FontStyle="Italic"
                                   Visibility="{Binding IsLocationSelected, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
    
    